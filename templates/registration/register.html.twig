{% extends 'base.html.twig' %}

{% block title %}Enregistrement
{% endblock %}

{% block body %}

	{% for message in app.flashes('error') %}
		<div class="alert alert-warning fw-bolder text-center">
			{{ message }}
		</div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="bg-light mt-4 p-4" id="regForm">
                <h1>Création de votre compte licencié</h1> <br>
                <h3>
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.numlicence, {'label' : 'Votre numéro de licence : '}) }}
                    {{ form_row(registrationForm.email, {'label' : 'Votre adresse email : '}) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    <button type="submit" class="btn btn-warning" id="bouttonEnregistrement">S'enregistrer</button>
                    {{ form_end(registrationForm) }}
                </h3>
            </div>
        </div>
    </div>
{% endblock body %}