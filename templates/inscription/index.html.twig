{% extends 'base.html.twig' %}

{% block title %}Inscription Congrés
{% endblock %}

{% block body %}

<div class="container">
    <h1>Informations du licencié</h1>
    <hr>
	{{ form_label(form.atelierInscrit, 'Choix Des Ateliers - (5 Maximum)') }}
    {% for batch in form.atelierInscrit|batch(2) %}
		<div class="row">
			{% for option in batch %}
				<div class="col">
					{{ form_label(option) }}
					{{ form_widget(option) }}
				</div>
			{% endfor %}
		</div>
	{% endfor %}
    <hr>
	{{ form_label(form.loger, 'Bulletin Réservation Hôtel') }}
	{% for batch in form.loger|batch(4) %}
		<div class="row">
			{% for option in batch %}
				<div class="col">
					{{ form_label(option) }}
					{{ form_widget(option) }}
				</div>
			{% endfor %}
		</div>
	{% endfor %}
    <hr>
	{{ form_row(form.restaurer, {"help": "","label": "Bulletin Réservation Accompagnant(e)", "required": true}) }}
</div>
{% endblock %}
