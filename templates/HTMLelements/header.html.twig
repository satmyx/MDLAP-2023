{% extends 'base.html.twig' %}

{% block header %}
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/img/mdl.png" alt="Logo Maison Des Ligues" width="100"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Accueil</a>
                    </li>
                    <li>
                        <a class="nav-link" href="/inscription">Inscription</a>
                    </li>
                    <li>
                        <a class="nav-link" href="/validation">Validation</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER')%}
                    <li>
                        <a class="nav-link" href="/admin">Gestion</a>
                    </li>
                    {% endif %}
                </ul>
                <form class="d-flex gap-2" role="connect">
                {# après avoir cliqué sur le bouton on redirige vers un écran de connection #}
                {% if app.user %}
                    <a class="btn btn-danger" href="{{ path('app_logout') }}">Me déconnecter</a>
                {% else %}
                    <a class="btn btn-warning" href="{{ path('app_login') }}">Se Connecter</a>
                {% endif %}
                </form>
            </div>
        </div>
    </nav>
    <hr class="rounded">
{% endblock %}